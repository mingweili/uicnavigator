<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mingweili.navigator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/uic_color_theme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCyWohTajlyskSzMVp99fjqj2RDWLL1u4E" />

        <activity
            android:name="com.mingweili.navigator.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
        	android:logo="@drawable/ic_launcher_white"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.mingweili.navigator.BuildingInfoActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
        	android:logo="@drawable/ic_launcher_white"
            android:parentActivityName="com.mingweili.navigator.BuildingInventoryActivity" >
            <meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.mingweili.navigator.BuildingInventoryActivity" />
        </activity>
        
        <activity
            android:name="com.mingweili.navigator.NavigationActivity"
            android:configChanges="orientation"
            android:label="@string/navigation_title"
        	android:logo="@drawable/ic_launcher_white"
            android:screenOrientation="portrait" 
            android:parentActivityName="com.mingweili.navigator.MainActivity" >
            <meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.mingweili.navigator.MainActivity" />
        </activity>
        
        <activity
            android:name="com.mingweili.navigator.BuildingInventoryActivity"
            android:configChanges="orientation"
            android:label="@string/building_inventory_title"
        	android:logo="@drawable/ic_launcher_white"
            android:screenOrientation="portrait" 
            android:parentActivityName="com.mingweili.navigator.MainActivity" >
            <meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.mingweili.navigator.MainActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.mingweili.navigator.SettingsActivity"
            android:configChanges="orientation"
            android:label="@string/settings_title"
        	android:logo="@drawable/ic_launcher_white"
            android:screenOrientation="portrait"
			android:parentActivityName="com.mingweili.navigator.MainActivity" >
            <meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.mingweili.navigator.MainActivity" />
        </activity>
    </application>

</manifest>