<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity" >

    <TextView
        android:id="@+id/about_copyright_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/about_app_icon_imageview"
        android:layout_alignRight="@+id/about_app_name_version_textview"
        android:text="@string/about_copyright_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/about_app_name_version_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/about_app_icon_imageview"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/about_app_icon_imageview"
        android:text="@string/about_app_name_version"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/about_app_icon_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="83dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/placeholder"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>